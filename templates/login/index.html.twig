{% extends 'base_not_connected.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="flex justify-center">
        <p class="text-lg font-semibold">Connexion</p>
    </div>

    {% if error %}
        <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="space-y-4">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div>
                <div>
                    <label class="font-semibold" for="username">Email:</label>
                </div>
                <div>
                    <input class="mt-2 text-black" type="text" id="username" name="_username" value="{{ last_username }}"/>
                </div>
            </div>

            <div>
                <div>
                    <label class="font-semibold" for="password">Password:</label>
                </div>
                <div>
                    <input class="mt-2 text-black" type="password" id="password" name="_password"/>
                </div>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Se connecter
                </button>
            </div>
        </div>
        <div class="mt-2 flex justify-center">
            <a href="{{ path('register') }}" class="text-xs text-semibold">Pas de compte ? C'est par ici</a>
        </div>
        <div class="mt-2 flex justify-center">
            <a href="{{ path('app_forgot_password_request') }}" class="text-xs text-semibold">Mot de passe oubli√©</a>
        </div>
    </form>
{% endblock %}
